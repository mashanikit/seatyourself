<!DOCTYPE html>
<html>
<head>
  <title>Seatyourself</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <nav>
      <ul>
        <li><%= link_to "Home", root_url %></li>
        <% if current_user %>
        <li class="logout">
          Welcome <%= current_user.name %>!
          |
          <%= link_to "Log-out", sessions_path, method: :delete %>
        </li>
        <% if current_page?(new_restaurant_path(current_user)) %>
        <% else %>
        <li><%= link_to "Add Your Restaurant", new_restaurant_path(current_user) %></li>
        <% end %>
        <% else %>
        <li>
          <%= link_to "Sign-up", new_users_path %>
          |
          <%= link_to "Log-in", new_sessions_path %>
        </li>
        <% end %>
      </ul>
    </nav>
      <% if flash.any? %>
        <% flash.each do |key, value| %>
          <p class="<%= key %>">
            <%= value %>
          </p>
        <% end %>
      <% end %>
  </header>
<%= yield %>

</body>
</html>
