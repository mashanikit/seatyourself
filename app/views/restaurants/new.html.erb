<h1>Add Your Restaurant!</h1>

<% if @restaurant.errors.any? %>
  <ul>
    <% @restaurant.errors.full_messages.each do |m| %>
      <li><%= m %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @restaurant do |f| %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :neighbourhood %>
    <%= f.text_field :neighbourhood %>
  </div>

  <div class='field'>
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

  <div class='field'>
    <%= f.label :cuisine_type, "Cuisine Type" %>
    <%= f.text_field :cuisine_type %>
  </div>

  <div class='field'>
    <%= f.label :opens, "Opens at" %>
    <%= f.number_field :opens %>
  </div>

  <div class="field">
    <%= f.label :closes, "Closes at" %>
    <%= f.number_field :closes %>
  </div>

  <div class="field">
    <%= f.label :capacity, "Maximum seats" %>
    <%= f.number_field :capacity %>
  </div>

  <div class="field">
    <%= f.label :image, "Photo(optional)" %>
    <%= f.text_field :image %>
  </div>

  <%= f.submit %>

<% end %>
