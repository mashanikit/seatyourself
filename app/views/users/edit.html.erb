<% if @user.errors.any? %>
  <ul>
    <% @user.errors.full_messages.each do |m| %>
      <li class="error"><%= m %></li>
    <% end %>
  </ul>
<% end %>

<%= render "profile" %>

<%= form_for(@user, url: "/users")  do |f| %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :phone_number %><br>
    <%= f.telephone_field :phone_number, :value => @user.number %>
  </div>

  <div class='field'>
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </div>

  <div class='field'>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>

  <div class='field'>
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
  </div>

  <%= f.submit %>

<% end %>

</div>
